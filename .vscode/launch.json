{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run tsx in VSCode",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--loader", "tsx"],
            "args": ["$(file)"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}